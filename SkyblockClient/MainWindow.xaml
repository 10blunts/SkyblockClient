<Window x:Name="wpfMainWindow" x:Class="SkyblockClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkyblockClient"
        mc:Ignorable="d" Width="630.667"
        Background="#25364D"
        FontFamily="Champagne &amp; Limousines" FontSize="18">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="BorderBrush" Value="#2c3e50"/>
                <Setter Property="BorderThickness" Value="2,0,2,5"/>
                <Setter Property="Background" Value="#FF587593"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontFamily" Value="Champagne &amp; Limousines"/>
                <Setter Property="Margin" Value="10,0,10,10"/>
            </Style>
            <Style TargetType="CheckBox">
                <Setter Property="Margin" Value="5,5,0,0"/>
            </Style>
        </Grid.Resources>
        <Rectangle Fill="#ecf0f1" Margin="10,41,10,10"/>
        <Label Margin="10,0" Content="SkyClient" VerticalAlignment="Top" Background="White" Foreground="#DD000000" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="24" FontFamily="Champagne &amp; Limousines" FontWeight="Bold"/>
        <Grid Margin="10,71,10,155">
            <Grid.Resources>
                <Style TargetType="Label">
                    <Setter Property="FontSize" Value="22"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel x:Name="stpMods">
                <Label Content="Mods"/>
            </StackPanel>
            <GridSplitter/>
            <StackPanel x:Name="stpResources" Grid.Column="1">
                <Label Content="Texturepacks"/>
            </StackPanel>
        </Grid>
        <StackPanel Margin="10,0,10,10" Height="114" VerticalAlignment="Bottom">
            <Button x:Name="btnInstallForge" Content="Install Forge" Click="BtnInstallForgeClick"/>
            <Button x:Name="btnInstallMods" Content="Install selected mods" Click="BtnInstallModsClick"/>
            <Button x:Name="btnInstallModsAndForge" Content="Install Forge and mods" Click="BtnInstallModsAndForgeClick"/>
        </StackPanel>
        <CheckBox x:Name="btnClearModsFolder" Content="Clear mods folder on Install" HorizontalAlignment="Left" Margin="56,0,0,130" Width="214" IsChecked="True" Height="20" VerticalAlignment="Bottom" Background="#FF69BF2D" BorderBrush="#FF48702C"/>
        <Button Content="Advanced Settings (coming soon)" VerticalAlignment="Top" Margin="10,43,10,0" Click="BtnAdvancedSettinsClick"/>
        <DockPanel HorizontalAlignment="Left" Height="100" LastChildFill="False" Margin="97,167,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="btnInstallPacks" Content="Install Packs" Margin="0,0,20,134" Height="28" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="294" Click="BtnInstallPacksClick"/>
    </Grid>
</Window>